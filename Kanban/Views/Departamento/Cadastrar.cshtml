@model Departamento

<form asp-action="Cadastrar" method="post" enctype="multipart/form-data">
    <fieldset>
        <legend>Cadastrar Departamento</legend>

        <div asp-validation-summary="ModelOnly" class="text-primary"></div>
        <div class="form-group" id="NomeDepartamento">
            <label asp-for="NomeDepartamento">Nome Departamento</label>
            <input type="text" asp-for="NomeDepartamento" class="form-control" />
            <span asp-validation-for="NomeDepartamento" class="text-primary"></span>
        </div>

        <input type="submit" class="btn btn-primary" value="Cadastrar" />
    </fieldset>
</form>
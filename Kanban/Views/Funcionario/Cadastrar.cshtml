@model Funcionario

<form asp-action="Cadastrar" method="post" enctype="multipart/form-data">

    <fieldset>
        <legend>Dados do Endereço</legend>
        <div asp-validation-summary="ModelOnly"
             class="text-primary"></div>
        <div class="form-group" id="cep">
            <label asp-for="Endereco.cep"></label>
            <input type="text" asp-for="Endereco.cep"
                   class="form-control" />
        </div>

        <input type="submit" class="btn btn-info"
               value="Buscar" asp-action="BuscarCep"
               asp-controller="Funcionario" />

        <div class="form-group" id="cidade">
            <label asp-for="Endereco.cidade"></label>
            <input type="text" asp-for="Endereco.cidade"
                   class="form-control" readonly="" />
        </div>

        <div class="form-group" id="bairro">
            <label asp-for="Endereco.bairro"></label>
            <input type="text" asp-for="Endereco.bairro"
                   class="form-control" readonly="" />
        </div>

    </fieldset>



    <fieldset>
        <legend>Cadastrar Funcionario</legend>

        <div asp-validation-summary="ModelOnly" class="text-primary"></div>
        <div class="form-group" id="TituloJob">
            <label asp-for="NomeFuncionario">Nome Funcionário</label>
            <input type="text" asp-for="NomeFuncionario" class="form-control" />
            <span asp-validation-for="NomeFuncionario" class="text-primary"></span>
        </div>

        <div class="form-group" id="DescricaoJob">
            <label asp-for="CpfFuncionario">CPF</label>
            <input type="number" asp-for="CpfFuncionario" class="form-control" />
            <span asp-validation-for="CpfFuncionario" class="text-primary"></span>
        </div>

        <div class="form-group" id="DataEntregaJob">
            <label asp-for="SenhaFuncionario">Senha</label>
            <input type="password" asp-for="SenhaFuncionario" class="form-control" />
            <span asp-validation-for="SenhaFuncionario" class="text-primary"></span>
        </div>

        <input type="submit" class="btn btn-primary" value="Cadastrar" />
    </fieldset>
</form>